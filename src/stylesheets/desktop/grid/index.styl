headerFooterPos()
	position absolute
	left 0
	right 0
	height 45px
	background linear-gradient(top, #222822, #222 100%)
	text-align center
	transition all 0.5s ease-in-out
	* 
		text-align left
	h1
		display inline-block
		color white
		margin 0
		padding 0
		font-size 18pt
		line-height 45px
		text-align center
	nav
		radiusVar = 10px
		display inline-block
		position absolute
		right 7px
		&.left
			right auto
			left 7px
		top 7px
		bottom 7px
		border-radius radiusVar
		border solid 1px rgba(256, 256, 256, 0.4)
		overflow hidden
		li 
			display inline-block
			margin 0
			NavStyles()
			p
				opacity 0
				transition all 0.25s ease-in-out
				padding 0
				margin 0
				float right
				display none
			&:hover 
				p
					opacity 1
					display inline-block
					width auto
				i
					margin-right 5px

	
.hidden
	display none

@import "header"
@import "footer"
@import "section"
