article	
	position fixed
	left asideSize
	right 0
	top 0
	bottom 0
	z-index 1
	transition all 0.5s ease-in-out
	transition-delay 0.2s
	article
		position absolute
		left 100%
		right -100%
		&.activated
			left 0
			right 0
		&.deactivated
			left -100%
			right 100%
	p
		margin-left 5px
		margin-right 5px
	*[contenteditable=true] 
		box-shadow 0 0 15px #3cf
		outline none

article
	@import "dragdrop"
