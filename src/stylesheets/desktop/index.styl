// Basic Styles
body
	font-family "Open Sans", "Helvetica", sans-serif
	font-size: 10pt
	background #eee
	width 100%
	height 100%
	margin 0
	padding 0

*
	[class*=" icon-"], [class*="icon-"], [class^=" icon-"], [class^="icon-"]
		width auto !important

html:not(.landing)
	background url(bgImage)

// The rest of the imports
// Otherwise it will not work
body:not(.landing)
	@import "grid"
	@import "tables"
	@import "aside"
	@import "article"

html:not(.landing)
	@import "variants"
	@import "specialCases"
    @import "ContextMenu"
