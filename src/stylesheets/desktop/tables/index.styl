section
	.container
		margin 0
		padding 0
		.row
			background white
			border-bottom rowBorder
			i
				cursor pointer
				&.icon-custom
					margin-right 5px
					&:before
						content: "\f078"
			p 
				display inline-block
				padding 10px
			span
				display block
				height 15px
				margin-top -15px
				position relative
				overflow hidden
				color #ccc
				transition color 0.5s linear
				white-space pre-wrap
				&:before
					content ""
					position absolute
					left 0
					right 0
					top 0
					bottom 0
					background linear-gradient(top, rgba(256, 256, 256, 0), #fff 100)
					background-position center 0
				&:hover
					height auto
					color: #222
					&:before 
						background none
				
			&.bordertop
				border-top rowBorder
				border-bottom none
				padding 0
			&.noborder
				border-bottom none
			&.folded 
				.container
					display none
				i.icon-custom:before
					content: "\f054"
