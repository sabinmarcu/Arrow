section
	.appcontainer
		margin 0
		padding 0
		.approw
			background white
			border-bottom rowBorder
			i
				cursor pointer
				float left
				margin 20px 0 
				height 10px
				&.icon-hidden
					margin-left 15px
				&.icon-custom
					margin-right 5px
					&:before
						content: "\f078"
			p 
				display inline-block
				display block !important
				margin 0 10px 0 35px
				input
					border none
					padding 10px 0
					margin 10px 0
					height 10px
					line-height 10px
					width 100%
					background none
					border none
					box-shadow none
					&:focus
						outline none
						box-shadow 0 0 5px #0cf
			span
				display block
				height 15px
				margin-top -15px
				position relative
				overflow hidden
				color #ccc
				transition color 0.5s linear
				white-space pre-wrap
				&:before
					content ""
					position absolute
					left 0
					right 0
					top 0
					bottom 0
					background linear-gradient(top, rgba(256, 256, 256, 0), #fff 100)
					background-position center 0
				&:hover
					height auto
					color: #222
					&:before 
						background none
				
			&.bordertop
				border-top rowBorder
				border-bottom none
				padding 0
			&.noborder
				border-bottom none
			&.folded 
				.container
					display none
				i.icon-custom:before
					content: "\f054"