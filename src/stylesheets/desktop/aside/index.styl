aside 
	position fixed
	left 0
	top 0
	bottom 0
	width asideSize
	z-index 2
	border-right solid 1px #444
	transition all 0.5s ease-in-out
	transform-origin left center 0
	section
		box-shadow:0 0 15px #666
		li
			list-style none
			border-bottom rowBorder
			background linear-gradient(top, #fff, rgba(256, 256, 256, 0.2) 100)
			font-size: 10pt
			p
				display block
				margin 0 5px 0 25px
				input
					display inline-block
					width 100%
					height 10px
					line-height 10px
					padding 10px 0 
					margin 10px 0
					background transparent
					border none
					box-shadow none
					&:focus
						outline none
						box-shadow 0 0 5px #0cf
			i
				float left
				margin 20px 0 20px 5px
				height 5px


