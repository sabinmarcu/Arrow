asideSize = 25%
rowBorder = solid 1px #999
bgImage = "http://turbo.premiumpixels.com/wp-content/uploads/2010/11/lead-214.jpg"
radiusVar = 10px
NavStyles() 
	line-height 29px
	padding 0 10px
	background linear-gradient(top, rgba(256, 256, 256, 0.3), rgba(256, 256, 256, 0.1))
	background-color rgba(256, 256, 256, 0.1)
	color #ccc
	transition all 0.5s ease-in-out
	border-left solid 1px rgba(256, 256, 256, 0.3)
	border-right solid 1px rgba(256, 256, 256, 0.1)
	font-family Electrolize
	&:first-of-type
		border-top-left-radius radiusVar
		border-bottom-left-radius radiusVar
		border-left none
	&:last-of-type
		border-top-right-radius radiusVar
		border-bottom-right-radius radiusVar
		border-right 0
	&:only-of-type
		border none
		border-radius radiusVar
	&:hover, &:active
		color #fff
		background-color rgba(0, 0, 0, 0.6)
		cursor pointer
