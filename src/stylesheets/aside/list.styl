article#list
	header, section, footer
		position absolute
		left 0
		right 0
	header, footer
		height 45px
	header
		font-family Electrolize
		top 0
		background linear-gradient(top, rgba(256, 256, 256, 0.4) 0%, rgba(256, 256, 256, 0.2) 100%)
		border-bottom solid 1px black
		h1
			line-height 45px
			padding 0 0 0 25px
			margin 0
	footer
		bottom 0
		text-align center
		p
			display none
	section
		top 45px
		bottom 45px
		li
			list-style none
			line-height 45px
			height 35px
			padding 5px 0
			background linear-gradient(top, rgba(256, 256, 256, 0.2) 0%, rgba(256, 256, 256, 0.0) 100%)
			p
				width 200px
				display inline-block
				input
					width 200px
					margin 0
