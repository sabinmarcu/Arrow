
&> section
	background black
	position absolute
	left 0
	right 0
	top 0
	bottom 75px
	overflow hidden
	transform-origin 50% 100%
	& #qrimage
		border-radius 100%
	&> article
		display block
		background linear-gradient(left, rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 66%, rgba(0, 0, 0, 0.2) 100%) backgroundcolor
		position absolute
		top 0
		bottom 0
		z-index 0
		left 0
		right 0
		padding 15px
		color white
		overflow-y auto
		overflow-x hidden
		transform translateX(-110%)
		transition all 1s ease
		opacity 0
		h1
			font-size 30px
			margin-bottom 25px
		&#server
			div	
				text-align center
				margin 25px 0
		&.active
			opacity 1
			transform translateX(0)
			& + article, & + article + article
				transform translateX(110%)
		form > div
			border-radius 4px
			box-shadow 0 0 15px rgba(256, 256, 256, 0.05)
			margin-top 25px
			& > div
				overflow hidden
				&:first-of-type
					border-top-left-radius 4px
					border-top-right-radius 4px
					label					
						border-top-left-radius 4px
						border-top-right-radius 4px
				&:last-of-type
					border-bottom-left-radius 4px
					border-bottom-right-radius 4px
					label					
						border-bottom-left-radius 4px
						border-bottom-right-radius 4px
				label
					padding 0
					margin 0
					overflow hidden
					display block
					position relative
					color white
					text-shadow 0 0 1px black
					font-size 10pt
					input[type="checkbox"]
						position absolute
						z-index -1
						opacity 0
						& ~ *
							background linear-gradient(top, rgba(256, 256, 256, 0.2) 0%, rgba(0, 0 ,0, 0.4) 100%), redbasecolor
							transition all 0.5s ease-in-out
						& ~ .switch
							position absolute
							left 0
							top 0
							bottom 0
							width 50px
							border-radius none
							border-right solid 1px black
							i
								width 20px
								height 20px
								font-size 14pt
								position absolute
								left 50%
								top 50%
								margin -10px 0 0 -10px

						& ~ span 
							display block
							margin-left 50px
							padding 10px
							box-shadow 15px 0 50px rgba(0, 0, 0, 0.6) inset
							color rgba(256, 256, 256, 0.8)

						&:checked							
							& ~ *
								background-color bluebasecolor
