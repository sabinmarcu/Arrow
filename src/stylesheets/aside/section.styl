@keyframes paneDown {
	0% { 
		top -100%
		bottom 100%
		left 0
		right 0
		opacity 0
		transform scale(0.6) translateY(0)
		z-index 2
	}
	66% {
		top -100%
		bottom 100%
		left 0
		right 0
		opacity 1
		transform scale(0.6) translateY(140%)
		z-index 2
	}
	100% {
		top -100%
		bottom 100%
		left 0
		right 0
		opacity 1
		z-index 2
		transform scale(1) translateY(100%)
	}
}

@keyframes paneUp {
	0% { 
		top 100%
		bottom -100%
		left 0
		right 0
		opacity 0
		transform scale(0.6) translateY(0)
		z-index 2
	}
	66% {
		top 100%
		bottom -100%
		left 0
		right 0
		opacity 1
		transform scale(0.6) translateY(-140%)
		z-index 2
	}
	100% {
		top 100%
		bottom -100%
		left 0
		right 0
		opacity 1
		z-index 2
		transform scale(1) translateY(-100%)
	}
}
@keyframes paneLeft {
	0% { 
		z-index 1
		left -300px
		right 300px
		transform scale(1) translateX(100%)
		opacity 1
	}
	66% {
		left -300px
		right 300px
		transform scale(0.6) translateX(80%)
		opacity 1
		z-index 1
	}
	100% {
		z-index 1
		left -300px
		right 300px
		transform scale(0.6) translateX(0)
		opacity 0
	}
}

@keyframes paneRight {
	0% { 
		z-index 1
		left 300px
		right -300px
		transform scale(1) translateX(-100%)
		opacity 1
	}
	66% {
		z-index 1
		left 300px
		right -300px
		transform scale(0.6) translateX(-80%)
		opacity 1
	}
	100% {
		z-index 1
		left 300px
		right -300px
		transform scale(0.6) translateX(0)
		opacity 0
	}
}
