
&> section
	background black
	position absolute
	left 0
	right 0
	top 0
	bottom 75px
	overflow hidden
	transform-origin 50% 100%
	& #qrimage
		border-radius 100%
	&> article
		display block
		background linear-gradient(left, rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 66%, rgba(0, 0, 0, 0.2) 100%) backgroundcolor
		position absolute
		top 0
		bottom 0
		z-index 0
		left 0
		right 0
		padding 15px
		color white
		overflow-y auto
		overflow-x hidden
		transform translateX(-110%)
		transition all 1s ease
		opacity 0
		h1
			font-size 30px
			margin-bottom 25px
		&#server
			div	
				text-align center
				margin 25px 0
		&.active
			opacity 1
			transform translateX(0)
			& + article, & + article + article
				transform translateX(110%)

