&> nav
	position absolute
	left 0
	right 0
	bottom 0
	height navbarheight
	thirdwidth = (asidewidth / 3)
	li
		width thirdwidth - 2
		height navbarheight
		background linear-gradient(top, rgba(256, 256, 256, 0.2) 0%, rgba(256, 256, 256, 0.1) 100%)
		display inline-block
		float left
		border-right solid 1px rgba(0, 0, 0, 0.1)
		border-left solid 1px rgba(256, 256, 256, 0.1)
		&:first-child
			width thirdwidth - 1
			border-left none
		&:last-child
			// width thirdwidth - 1
			border-right none
		text-align center
		i
			line-height navbarheight !important
			width 100% !important
			height 100% !important
			color white
			font-size 35px !important
			opacity 0.2
			transition all 0.2s ease-in-out
			cursor pointer
		span
			position absolute
			left 0
			right 0
			top 100%
			bottom 0
			color rgba(256, 256, 256, 0.2)
			text-shadow 0 0 1px basecolor
			opacity 0.5
			transition all 0.5s ease-in-out
		position relative
		&:hover
			i
				opacity 0.7	
				text-shadow 0 0 25px basecolor
			span
				top 66%

