section
	article
		margin 25px 0
		.container
			background rgba(0, 0, 0, 0.05)
			border-radius 25px
			position relative
			aside
				position absolute
				left 20px
				top 15px
				a
					color #999
					transition all 0.5s ease-in-out
					text-decoration none
					&:hover, &:active
						color black
					&:visited, &:link
						text-decoration none
						color #999
			section
				padding 25px
				margin-left 50px
				border-left solid 1px #ccc
				h1
					font-size 1.4em
					color #1262aa
					margin 0
					&:before
						content: "// "
				h2
					font-size 1.1em
					color #aa1268
					margin 0
					&:before
						content: "// "
		&:first-child
			margin-top 100px

