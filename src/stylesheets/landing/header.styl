header
	display block
	background linear-gradient(top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.9) 100%)
	font-weight 300
	h1
		font-size: 72pt
		font-family "Electrolize"
		margin 0
		padding 50px 0 0
		color #1262bb
	h2
		font-size 12pt
		text-align right
		margin 0
		padding-bottom 15px
		color rgba(256, 256, 256, 0.1)
		span
			color rgba(256, 256, 256, 0.2)
			&:first-child
				color rgba(256, 25, 25, 0.3)

