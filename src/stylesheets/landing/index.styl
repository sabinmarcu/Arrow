totalwidth = 1000px
sidebarwidth = 300px

header
	position absolute
	top 0
	left 0
	right 0
	height 300px
	background black
	text-align center
	.container
		width totalwidth
		position relative
		height 100%
		margin 0 auto
		box-shadow 0 0 15px rgba(256, 256, 256, 0.1)
		overflow hidden
header
	@import "article"
	@import "a"

.container.rest
	width totalwidth
	position absolute
	top 300px
	left 50%
	margin-left -(totalwidth / 2)

	section, aside
		float left
		display inline-block

	section
		width (totalwidth - asidewidth - 1)
		p
			padding 25px

	aside
		float right
		width asidewidth
		text-align center
		background rgba(0, 0, 0, 0.4)
		box-shadow inset 0 0 150px black
		padding 25px 0
		border-bottom-right-radius 10px
		border-bottom-left-radius 10px
		a
			width 75%
			margin 5px 0 

@media (max-width:770px) 
	totalwidth = 700px
	asidewidth = 200px
	headerheight = 200px
	header 
		height headerheight
		text-align center
		line-height headerheight
		.container 
			width totalwidth
		a 
			opacity 1
	.container.rest
		overflow auto
		top headerheight
		width totalwidth
		margin-left -(totalwidth / 2)
		section
			width ( totalwidth  - asidewidth - 1 )
		aside
			width asidewidth
@media (max-width:360px) 
	totalwidth = 360px
	headerheight = 150px
	header 
		height headerheight
		text-align center
		line-height headerheight
		.container 
			width totalwidth
		a 
			opacity 1
	.container.rest
		overflow auto
		top headerheight
		width totalwidth
		margin-left -(totalwidth / 2)
		section
			width totalwidth
			display block
			float none
		aside
			width totalwidth
			display block
			float none
			border-radius 0
