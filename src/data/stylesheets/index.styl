// Defining variables
@import "variables"

body, html
	overflow hidden
	* 
		-webkit-overflow-scrolling touch

body
	width 100%
	height 100%
	font-size 10pt
	font-family "Open Sans", sans-serif
	color #242424
	background-color black

body.landing
	background-color white

body:not(.landing)
	@import "fonts"
	@import "aside"
	@import "article"
	@import "loadingscreen"
	@import "themes"
    @import "chromeframe"

body.landing
	@import "landing"

body
	.modal-backdrop
		z-index 9999
	.modal
		z-index 99999
