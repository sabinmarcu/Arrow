#appwrapper > section
	position absolute
	font-weight 100
	z-index 1
	left 0
	top 0
	bottom 0
	right 0
	.dragger
		position fixed
		width auto
		z-index 5
		opacity 1
		font-size 24
		background rgba(256, 256, 256, 0.2)
		border-radius 4px
		border solid 1px rgba(256, 256, 256, 0.4)
		padding 15px
	perspective 1600px
	transition all 1s ease-in-out
	font-family Roboto

		
#appwrapper > section
	@import "help"
	@import "landing"
	@import "application"

#appwrapper.landing section#landing, #appwrapper.help section#help, #appwrapper.application section#application, #appwrapper.settings section#settings
	transform none

#appwrapper.help section#help ~ section#application, #appwrapper.settings section#settings ~ section#application
	transform none

#appwrapper
	position relative
	width 100%
	height 100%
	perspective 1600px
	perspective-origin bottom center
	transition all 1s ease-in-out
	font-family Roboto
	font-weight 100
	overflow hidden
