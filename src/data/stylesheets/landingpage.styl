header
	position absolute
	top 0
	left 0
	right 0
	height 300px
	background black
	text-align center
	.container
		width 1000px
		position relative
		height 100%
		margin 0 auto
		box-shadow 0 0 15px rgba(256, 256, 256, 0.1)
	article
		float left
		transform skew(-15deg)
		overflow hidden
		position absolute
		left -85px
		right -85px
		top 0
		bottom 0
		box-shadow 0 0 15px black
		img 
			width 100%
			height 100%
		&:first-child
			right 50%
			img
				transform skew(15deg)
				float right
				margin-right -85px
		&:last-child
			left 50%
			img
				transform skew(15deg)
				float left
				margin-left -85px
		&:after
			content: ""
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			box-shadow inset 0 0 450px black
	a
		opacity 0
		position absolute
		top 50%
		left 50%
		margin -25px 0 0 -100px
		width 200px
		height 50px
		transition all 0.5s ease-in-out
		line-height 50px
		font-size 24pt
		font-weight bold
		text-shadow 0 1px 1px white
		color rgba(0, 0, 0, 0.4)
		box-shadow none
		&:active
			box-shadow none
			color rgba(0, 0, 0, 0.8)
	&:hover a
		opacity 1
