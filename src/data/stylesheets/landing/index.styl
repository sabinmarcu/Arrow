panelcolor = #f6f6f6
angle = 30deg
bordercolor = #ccc

section
	font-family Roboto
	position absolute
	top 0
	bottom 0
	right 0
	left 0
	&, & > aside, & > section, & > nav
		transition all 1s ease-in-out
	article
		position absolute
		width 400px
		height 200px
		z-index 3
		top 50%
		left 50%
		margin -100px 0 0 -200px
		line-height 200px
		text-align center
		p 
			display inline-block
			font-weight 100
			color black
			transform skew((- angle), 0)
			overflow hidden
			font-size 56pt
			vertical-align middle
			text-align center
			margin -5px 0
			span 
				display inline-block
				color #48f
				font-size 42pt
				transform skew(angle, 0)
				margin 15px 0 0 -10px
				small 
					display inline-block
					font-size inherit
					transition all 0.5s ease-in-out
					transform-origin 100% 50%
					transform translateX(155px)
					width 5px
					overflow hidden
					float right
		&:hover 
			p
				margin-right -5px  
				small 
					transform translateX(0)
					width 155px
			& ~ header, & ~ footer
				background panelcolor
				transform translateX(0)
	aside
		position absolute
		left 0
		top 0
		background #fff
		&:first-of-type 
			margin-left -2px
	nav, section
		opacity 0
		position absolute
		color #48f
		overflow hidden
		bottom 0
		overflow auto
		padding 5px
		h1
			font-size 10pt
			line-height inherit
			font-weight normal
	nav
		left 0
		top 50px
		width 190px
		transform translateX(-100%)
		ul
			font-size 10pt
			font-weight 100
			line-height inherit
			margin 10px -5px
			li
				list-style none
				background #48f
				color white
				transition all 0.5s ease-in-out
				padding 10px
				&:hover
					background white
					font-weight normal
					color #48f
			
	section 
		top 0
		left 200px
		right 0
		transform translateY(-100%)
	&.Closed
		background #666
		nav, section
			opacity 0
	&.Open, &.Inactive, &.Active
		background #fff 
		background -moz-radial-gradient(center, ellipse cover, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%) 
		background -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(0, 0, 0, 0)), color-stop(100%,rgba(0, 0, 0, 0.05))) 
		background -webkit-radial-gradient(center, ellipse cover, rgba(0, 0, 0, 0) 0%,rgba(0, 0, 0, 0.05) 100%) 
		background -o-radial-gradient(center, ellipse cover, rgba(0, 0, 0, 0) 0%,rgba(0, 0, 0, 0.05) 100%) 
		background -ms-radial-gradient(center, ellipse cover, rgba(0, 0, 0, 0) 0%,rgba(0, 0, 0, 0.05) 100%) 
		background radial-gradient(ellipse at center, rgba(0, 0, 0, 0) 0%,rgba(0, 0, 0, 0.05) 100%) 
		article 
			opacity 0
			left 25px
			top 0
			margin 0
			width auto
			height 50px
			line-height 50px
			text-align left
			transition all 0.5s ease-in-out
			p
				font-size 24pt
				span
					font-size 18pt
					margin -2px 0 0 -4px
					small
						transform translateX(60px)
			&:hover p 
				margin-right 0
				small
					transform translateX(0)
					width 65px
	&.Inactive, &.Active
		article
			opacity 0.5
	&.Active
		article
			opacity 1
			p
				margin-right 0
				span
					small
						transform translateX(0)
						width 65px
			& ~ header, & ~ footer
				background panelcolor
				transform translateX(0)
		background white
		section, nav
			opacity 1
			transform translateX(0) translateY(0)
		


@media (max-width770px) 
	totalwidth = 700px
	asidewidth = 200px
	headerheight = 200px
	header 
		height headerheight
		text-align center
		line-height headerheight
		.container 
			width totalwidth
		a 
			opacity 1
	.container.rest
		overflow auto
		top headerheight
		width totalwidth
		margin-left -(totalwidth / 2)
		section
			width ( totalwidth  - asidewidth - 1 )
		aside
			width asidewidth
@media (max-width360px) 
	totalwidth = 360px
	headerheight = 150px
	header 
		height headerheight
		text-align center
		line-height headerheight
		.container 
			width totalwidth
		a 
			opacity 1
	.container.rest
		overflow auto
		top headerheight
		width totalwidth
		margin-left -(totalwidth / 2)
		section
			width totalwidth
			display block
			float none
		aside
			width totalwidth
			display block
			float none
			44border-radius 0
