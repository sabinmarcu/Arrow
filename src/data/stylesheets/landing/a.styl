a
	opacity 0
	position absolute
	top 50%
	left 50%
	margin -25px 0 0 -100px
	width 200px
	height 50px
	transition all 0.5s ease-in-out
	line-height 50px
	font-size 20pt
	font-weight bold
	text-shadow 0 1px 1px white
	color rgba(0, 0, 0, 0.4)
	box-shadow none
	&:active
		box-shadow none
		color rgba(0, 0, 0, 0.8)
&:hover a
	opacity 1
