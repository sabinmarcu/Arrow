angle = 30deg

> article
	height 150px
	width 350px
	background white
	border-radius 4px
	box-shadow 0 5px 5px rgba(0, 0, 0, 0.2)
	border solid 1px rgba(0, 0 ,0 ,0.2)
	opacity 0
	position absolute
	z-index 9
	left 50%
	top 50%
	margin -100px 0 0 -175px
	text-align center
	transform scale(10)
	padding 25px 0
	font-family Roboto
	> nav
		font-size 14pt
		font-weight 100
	> aside
		he = 100px
		height he
		line-height he
		p 
			display inline-block
			font-weight 100
			color black
			transform skew((- angle), 0)
			overflow hidden
			font-size 56pt
			vertical-align middle
			text-align center
			margin -5px 0
			span 
				display inline-block
				color #48f
				font-size 42pt
				transform skew(angle, 0)
				margin 15px 0 0 -10px
				small 
					display inline-block
					font-size inherit
					transition all 0.5s ease-in-out
					transform-origin 100% 50%
					transform translateX(155px)
					width 5px
					overflow hidden
					float right
		&:hover 
			p
				margin-right -5px  
				small 
					transform translateX(0)
					width 155px
	transition-delay 0.5s
	&:hover
		transition-delay 0
		width 400px
		margin-left -200px

&.active > article
	opacity 1
	transform scale(1)
