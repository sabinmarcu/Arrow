#chromepanel
  display inline-block
  position fixed
  top 0
  left 0
  right 0
  height 25px
  z-index 10
  *
    opacity 0
    transition all 0.25s ease-in-out
  &:hover
    background rgba(256, 256, 256, 0.2)
    *
      opacity 1
  i
    float right
    height 25px !important
    width 25px !important
    line-height 25px !important
  dragger
    position absolute
    left 0
    top 0
    bottom 0
    right 45px
