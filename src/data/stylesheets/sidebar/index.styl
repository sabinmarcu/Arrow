#appwrapper	#application #sidebar-container > section
	display inline-block
	position absolute
	top 0
	left 0
	height 75%
	max-height 600px
	width 250px
	background white
	border-bottom-right-radius 2px
	border solid 1px rgba(0, 0, 0, 0.3)
	border-left none
	border-top none
	box-shadow -1px 1px 5px rgba(0, 0, 0, 0.4)
	transition all 1s ease-in-out
	transform translateX(-100%)
	&.open
		transform none
	nav
		position absolute
		left 0
		right 0
		bottom 0
		height 45px
		border-top solid 1px #ccc
		background white
		box-shadow 0 0 15px rgba(0, 0, 0, 0.2) inset
		li
			display inline-block
			background white
			height 45px
			margin-top -1px
			line-height 45px
			width 45px
			text-align center
			font-size 14pt
			border-right solid 1px rgba(0, 0, 0, 0.2)
			border-top solid 1px #ccc
			transition all 0.5s ease-in-out
			color rgba(0, 0, 0, 0.4)
			&:hover 
				color rgba(0, 0, 0, 0.7)
			&.active
				border-top solid 1px white
				color #48f
				text-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
	section
		position absolute
		bottom 46px
		top 0
		right 0
		left 0
		overflow hidden
		article
			position absolute
			border solid 1px rgba(0, 0, 0, 0.2)
			left -1px
			right -1px
			top -1px
			bottom -1px
			overflow auto
			transition all 0.5s ease-in-out
			transform translateX(-110%)
			&.active
				transform none
				~ article
					transform translateX(110%)
			ul
				padding 0
				margin 0
				li
					display block
					padding 15px 0 15px 10px
					border-bottom solid 1px rgba(0, 0, 0, 0.2)
					font-size 10pt
