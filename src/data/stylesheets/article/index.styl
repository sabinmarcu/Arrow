> article
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	z-index 2
	background  url("<<INSERT_BACKGROUND_IMAGE_HERE>>") no-repeat center center, linear-gradient(top, white 0, white 98%, #eee 100%) #eee
	transition all 0.5s ease-in-out
	overflow hidden
	transform translateX(0)
	&.sidebaropen
		transform translateX(asidewidth)
	#showhideappmenu
		display inline-block
		position absolute
		left 0
		top 50%
		height 25px
		width 25px
		line-height 25px
		text-align left
		background rgba(0, 0, 0, 0.2)
		border-radius 25px
		margin -17px 0 0 -17px
		padding 5px
		cursor pointer
		opacity 0.2
		transition all 0.3s ease-in-out
		z-index 9
		&:hover 
			opacity 1
		i
			margin-left 14px

> article 
	@import "section/index"
